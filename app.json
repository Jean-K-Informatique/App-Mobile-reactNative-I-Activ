{
  "expo": {
    "name": "APP I-Activ",
    "slug": "app-i-activ",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "schemes": [
      "myapp",
      "com.jeankiactiv.boltexponativewind",
      "com.googleusercontent.apps.741599469385-2mvps552mdbu0fjimvim0qvti0jfrh5o"
    ],
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "locales": {
      "fr": "./locales/fr.json"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.jeankiactiv.boltexponativewind",
      "infoPlist": {
        "CFBundleLocalizations": ["fr", "en"],
        "CFBundleDevelopmentRegion": "fr",
        "NSMicrophoneUsageDescription": "L'application utilise le microphone pour la dictée vocale et les messages audio.",
        "NSSpeechRecognitionUsageDescription": "L'application utilise la reconnaissance vocale pour la dictée."
      }
    },
    "android": {
      "package": "com.jeankiactiv.boltexponativewind",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "locales": ["fr", "en"]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      "expo-camera",
      "expo-apple-authentication",
      [
        "expo-image-picker",
        {
          "photosPermission": "L'application accède aux photos pour partager des images dans le chat"
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "L'application utilise le microphone pour la dictée vocale et les messages audio."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "d4ec0c60-82a2-4a4e-bf3b-081a997bc791"
      }
    }
  }
}
